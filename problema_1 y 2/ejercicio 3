   var x= 20;
   var y= 30;
   var r=0;
   var op= prompt("que operacion quiere? 1. sumar, 2. restar, 3. multiplicar, 4. dividir");
switch (op) {
  case "1":
  r=(x*1)+(y*1);
    console.log("La respuesta es: ", r);
    break;
  case "2":
     r=(x*1)-(y*1);
    console.log("La respuesta es: ", r);
    break;
  case "3":
     r=(x*1)*(y*1);
    console.log("La respuesta es: ", r);
    break;
  case "4":
     r=(x*1)/(y*1);
    console.log("La respuesta es: ", r);
    break;
  default:

}
